<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginRight="3dp"
    android:layout_marginLeft="3dp"
    android:orientation="horizontal"
    android:background="@drawable/background_border" >

    <TextView
        android:id="@+id/name_asso"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="Label Asso"
        android:textSize="25sp"
        android:textColor="@color/colorBlack"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp" />

    <ImageButton
        android:id="@+id/button_asso_view"
        android:contentDescription="@string/desc_arrow"

        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/colorWhite"
        android:src="@drawable/right_chevron"

        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/name_asso" />

    <TextView
        android:id="@+id/category_asso"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="Label Category"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:textStyle="italic"

        android:layout_below="@+id/name_asso"
        android:layout_marginTop="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>

