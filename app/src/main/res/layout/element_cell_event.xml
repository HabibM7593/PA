<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="3dp"
    android:layout_marginLeft="3dp"
    android:orientation="horizontal"
    android:background="@drawable/background_border" >

        <TextView
            android:id="@+id/name_event"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            tools:text="Label Event"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"

            android:layout_marginStart="10dp" />

        <ImageButton
            android:id="@+id/button_event_view"
            android:contentDescription="@string/desc_arrow"

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/colorWhite"
            android:src="@drawable/right_chevron"

            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_alignBaseline="@+id/name_event" />

        <TextView
            android:id="@+id/date_event"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            tools:text="Label Date"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"

            android:layout_marginTop="35dp"
            android:layout_marginStart="25dp" />

</RelativeLayout>

