<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_asso_details"
    tools:context=".ui.fragment.AssociationDetailsFragment"
    android:background="@color/colorWhite" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_asso"

        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/image_asso_details"
            android:contentDescription="@string/desc_logo"

            android:layout_width="200dp"
            android:layout_height="160dp"
            android:src="@drawable/logo_image"

            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/name_asso_details"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/label_name_asso"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"

            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/image_asso_details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/name_category_details"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/label_name_category"
            android:textSize="15sp"
            android:textColor="@color/colorBlue"
            android:textStyle="bold"

            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/name_asso_details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/info_logo"
            android:contentDescription="@string/desc_info_logo"

            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@drawable/ic_info"

            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/name_category_details"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/info_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/label_info"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"

            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/info_logo"
            app:layout_constraintBottom_toBottomOf="@id/info_logo"
            app:layout_constraintStart_toEndOf="@id/info_logo" />

        <ImageView
            android:id="@+id/email_logo"
            android:contentDescription="@string/desc_email_logo"

            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@drawable/ic_email"

            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@+id/info_logo"
            app:layout_constraintLeft_toLeftOf="@id/info_logo" />

        <TextView
            android:id="@+id/email_asso_details"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="@string/hint_email"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"

            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/email_logo"
            app:layout_constraintBottom_toBottomOf="@+id/email_logo"
            app:layout_constraintStart_toEndOf="@+id/email_logo"/>

        <ImageView
            android:id="@+id/phone_logo"
            android:contentDescription="@string/desc_phone_logo"

            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@drawable/ic_phone"

            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/email_logo"
            app:layout_constraintLeft_toLeftOf="@id/email_logo" />

        <TextView
            android:id="@+id/phone_asso_details"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="@string/hint_phone"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"

            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/phone_logo"
            app:layout_constraintBottom_toBottomOf="@+id/phone_logo"
            app:layout_constraintStart_toEndOf="@+id/phone_logo"/>

        <ImageView
            android:id="@+id/website_logo"
            android:contentDescription="@string/desc_website_logo"

            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@drawable/ic_website"

            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/phone_logo"
            app:layout_constraintLeft_toLeftOf="@id/phone_logo" />

        <TextView
            android:id="@+id/website_asso_details"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="@string/hint_website"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"

            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/website_logo"
            app:layout_constraintBottom_toBottomOf="@+id/website_logo"
            app:layout_constraintStart_toEndOf="@+id/website_logo"/>

        <ImageView
            android:id="@+id/support_logo"
            android:contentDescription="@string/desc_support_logo"

            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@drawable/ic_donate"

            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/website_logo"
            app:layout_constraintLeft_toLeftOf="@id/website_logo" />

        <TextView
            android:id="@+id/support_asso_details"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="@string/hint_support"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"

            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/support_logo"
            app:layout_constraintBottom_toBottomOf="@+id/support_logo"
            app:layout_constraintStart_toEndOf="@+id/support_logo"/>

        <Button
            android:id="@+id/button_follow"

            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/round_corner_blue"

            android:text="@string/label_follow"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"

            app:layout_constraintTop_toBottomOf="@+id/support_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
