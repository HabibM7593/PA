<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_asso_details"
    tools:context=".ui.fragment.AssociationDetailsFragment"
    android:background="@color/colorWhite" >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_asso"

        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/back_button_details_asso"
            android:contentDescription="@string/back_arrow"

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/colorWhite"
            android:src="@drawable/left_chevron"

            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/image_asso_details"
            android:contentDescription="@string/asso_logo"

            android:layout_width="200dp"
            android:layout_height="160dp"
            android:src="@drawable/logo_image"

            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/name_asso_details"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/hint_asso"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"

            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/image_asso_details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/name_category_details"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/hint_category_name"
            android:textSize="15sp"
            android:textColor="@color/colorBlue"
            android:textStyle="bold"

            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/name_asso_details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/info_logo"
            android:contentDescription="@string/info_logo"

            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@drawable/ic_info"

            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/name_category_details"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/info_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/info_label"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"

            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/info_logo"
            app:layout_constraintBottom_toBottomOf="@id/info_logo"
            app:layout_constraintStart_toEndOf="@id/info_logo" />

        <TextView
            android:id="@+id/email_asso_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/email_label"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"

            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/info_label"
            app:layout_constraintLeft_toLeftOf="@id/info_logo"/>

        <TextView
            android:id="@+id/email_asso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/hint_email"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"

            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/email_asso_label"
            app:layout_constraintBottom_toBottomOf="@+id/email_asso_label"
            app:layout_constraintStart_toEndOf="@+id/email_asso_label"/>

        <TextView
            android:id="@+id/phone_asso_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/phone_label"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"

            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/email_asso_label"
            app:layout_constraintLeft_toLeftOf="@id/email_asso_label"/>

        <TextView
            android:id="@+id/phone_asso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/hint_phone"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"

            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/phone_asso_label"
            app:layout_constraintBottom_toBottomOf="@+id/phone_asso_label"
            app:layout_constraintStart_toEndOf="@+id/phone_asso_label"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>