<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Activity.SignupActivity" >

    <ImageButton
        android:id="@+id/back_button_signup"
        android:contentDescription="@string/back_arrow"

        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/colorWhite"
        android:src="@drawable/left_chevron"

        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/title_signup"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/signup_label"
        android:textSize="30sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"

        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/name_signup"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border"
        android:ems="15"

        android:hint="@string/hint_name"
        android:autofillHints="@string/hint_name"
        android:inputType="text"
        android:gravity="center"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/title_signup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/firstname_signup"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border"
        android:ems="15"

        android:hint="@string/hint_firstname"
        android:autofillHints="@string/hint_firstname"
        android:inputType="text"
        android:gravity="center"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/name_signup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/age_signup"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border"
        android:ems="15"

        android:hint="@string/hint_age"
        android:autofillHints="@string/hint_age"
        android:inputType="date"
        android:maxLength="10"
        android:gravity="center"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/firstname_signup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/email_signup"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border"
        android:ems="15"

        android:hint="@string/hint_email"
        android:autofillHints="@string/hint_email"
        android:inputType="textEmailAddress"
        android:gravity="center"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/age_signup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/password_signup"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border"
        android:ems="15"

        android:hint="@string/hint_password"
        android:autofillHints="@string/hint_password"
        android:inputType="textPassword"
        android:gravity="center"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/email_signup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_signup_send"

        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/round_corner"

        android:text="@string/signup_label"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"

        android:onClick="Signup"

        app:layout_constraintTop_toBottomOf="@+id/password_signup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>