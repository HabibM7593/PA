<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="@color/colorWhite" >

    <ImageButton
        android:id="@+id/back_button_signup"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:src="@drawable/left_chevron"
        android:background="@color/colorWhite"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/title_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="S'inscrire"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:textStyle="bold"

        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/name_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border"

        android:ems="15"
        android:inputType="text"
        android:hint="Nom"
        android:gravity="center"

        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_signup"/>

    <EditText
        android:id="@+id/firstname_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border"

        android:ems="15"
        android:inputType="text"
        android:hint="PrÃ©nom"
        android:gravity="center"

        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_signup"/>

    <EditText
        android:id="@+id/age_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border"

        android:ems="15"
        android:inputType="date"
        android:hint="Date de naissance"
        android:gravity="center"
        android:maxLength="10"

        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstname_signup"/>

    <EditText
        android:id="@+id/email_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border"

        android:ems="15"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:gravity="center"

        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age_signup"/>

    <EditText
        android:id="@+id/password_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border"

        android:ems="15"
        android:inputType="textPassword"
        android:hint="Mot de Passe"
        android:gravity="center"

        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_signup"/>

    <Button
        android:id="@+id/button_signup_send"
        android:layout_width="100dp"
        android:layout_height="30dp"

        android:text="Connexion"
        android:textSize="10dp"
        android:onClick="Signup"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_corner"

        app:layout_constraintTop_toBottomOf="@+id/password_signup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>